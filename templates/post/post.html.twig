{% extends 'base.html.twig' %}

{% block title %}
    Post
{% endblock %}
{% block body %}
    
    
    {#Title: {{post.getTitle()}} Body: {{post.getBody()}}#}
    <div class="sm:w-3/5 w-4/5 mx-auto">
            <h1 class="pt-20 sm:text-5xl md:text-7xl text-4xl font-bold text-center">
                {{ post.getTitle() }}
            </h1>

            <div class="py-10 text-center">
                <div class="inline-block sm:pt-1">
                    <h2 class="font-bold">
                        Created by: {{post.getAuthor().getName()}}
                    </h2>

                    <p class="text-sm text-gray-600">
                        Email: {{post.getAuthor().getEmail()}}
                    </p>
                    <p class="text-sm text-gray-600">
                        Phone: {{post.getAuthor().getPhone()}}
                    </p>
                    <p class="text-sm text-gray-600">
                        Website: {{post.getAuthor().getWebsite()}}
                    </p>
                </div>
            </div>

            <p class="text-xl py-6">
                {{ post.getBody() }}
            </p>
            <div class="py-10 text-center">
                <a href="/posts" class="uppercase border border-gray-500 text-gray-600 text-lg py-4 px-12 rounded transition transition-all hover:bg-gray-800 hover:text-white">
                    Back to Main Page
                </a>
            </div>
        </div>
{% endblock %}